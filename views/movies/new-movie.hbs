<div class="container">
    <h2>Create a new movie</h2>

    <hr>
    <div class="row justify-content-center">

        <div class="col-6">

            <form action="/movies/create" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="movietitle" name="title">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="moviegenre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="movieplot" name="plot">
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select class="form-select" name="cast" multiple>
                        {{#each cast}}
                            <option value="{{celebritie.id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="poster" class="form-label">Poster URL</label>
                    <input type="text" class="form-control" id="movieposter" name="poster">
                </div>

                <button type="submit" class="my-5 btn btn-dark">Create new movie</button>

            </form>

        </div>

    </div>

</div>