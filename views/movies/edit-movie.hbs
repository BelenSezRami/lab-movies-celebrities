<div class="container">
    <h2>Update {{movie.title}}</h2>

    <hr>
    <div class="row justify-content-center">

        <div class="col-6">
            <form action="/movies/{{movie.id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="movietitle" name="title" value="{{movie.title}}">
                </div>

                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="moviegenre" name="genre" value="{{movie.genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <textarea class="form-control" id="movieplot" name="plot">{{movie.plot}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="cast" class="form-label">Cast</label>
                    <select class="form-select" name="cast" multiple>
                        {{#each celebrities}}
                            
                            <option value="{{this.id}}">{{this.name}}</option>

                        {{/each}}
                    </select>
                </div>

                <div class="mb-3">
                    <label for="poster" class="form-label">Poster URL</label>
                    <input type="text" class="form-control" id="movieposter" name="poster" value="{{movie.poster}}">
                </div>

                <button type="submit" class="mb-5 mt-2 btn btn-dark">Update movie</button>

            </form>

        </div>

    </div>
</div>